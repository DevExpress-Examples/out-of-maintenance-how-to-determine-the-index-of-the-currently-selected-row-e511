<Window x:Class="LastRow.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Window1" Height="300" Width="392">
    <DockPanel>
        <TextBox x:Name="textbox" DockPanel.Dock="Top" />
        <Button x:Name="btn" Click="btn_Click" DockPanel.Dock="Top">
            Click to know whether the selected row is last or first
        </Button>
        <dxg:GridControl Name="grid">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="column1" />
                <dxg:GridColumn FieldName="column2" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" AutoWidth="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</Window>
